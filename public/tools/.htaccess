# Enable mod_rewrite for URL handling
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /tools/
    
    # If requesting the directory (with or without trailing slash)
    # serve the index.php file
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^$ index.php [L]
</IfModule>

# Set index.php as the directory index
DirectoryIndex index.php

# Disable directory listing as fallback
Options -Indexes
