# eclectyc-energy/.env.example
# Application Environment Configuration
# Last updated: 06/11/2024 14:45:00

# Application Settings
APP_ENV=development
APP_DEBUG=false
APP_URL=https://eclectyc.energy
APP_TIMEZONE=Europe/London

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=energy_platform
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# Logging
LOG_LEVEL=INFO
LOG_PATH=logs/app.log

# Mail Configuration (optional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@eclectyc.energy
MAIL_FROM_NAME="Eclectyc Energy"

# SFTP Export Configuration (optional)
SFTP_HOST=
SFTP_PORT=22
SFTP_USERNAME=
SFTP_PASSWORD=
SFTP_PATH=/exports/

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTPONLY=true

# API Keys (future use)
API_KEY=
API_SECRET=