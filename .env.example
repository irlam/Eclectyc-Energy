# eclectyc-energy/.env.example
# Application Environment Configuration
# Last updated: 12/27/2024 15:30:00

# Application Settings
APP_ENV=development
APP_DEBUG=false
APP_URL=https://eclectyc.energy
APP_TIMEZONE=Europe/London

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=energy_platform
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# Logging
LOG_LEVEL=INFO
LOG_PATH=logs/app.log

# Mail Configuration (optional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@eclectyc.energy
MAIL_FROM_NAME="Eclectyc Energy"

# SFTP Export Configuration (optional)
SFTP_HOST=
SFTP_PORT=22
SFTP_USERNAME=
SFTP_PASSWORD=
SFTP_PATH=/exports/
SFTP_PRIVATE_KEY=
SFTP_PASSPHRASE=
SFTP_TIMEOUT=15

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTPONLY=true

# API Keys (future use)
API_KEY=
API_SECRET=

# Scheduler & Alerts Configuration
ADMIN_EMAIL=admin@eclectyc.energy
ALERT_ENABLED=true

# Health Check Configuration
HEALTH_MAX_EXPORT_HOURS=24
HEALTH_MAX_IMPORT_HOURS=24

# External Data Sources (optional)
# Temperature API (e.g., OpenWeatherMap, Met Office)
WEATHER_API_KEY=
WEATHER_API_URL=

# Carbon Intensity API (e.g., National Grid ESO)
CARBON_API_KEY=
CARBON_API_URL=https://api.carbonintensity.org.uk

# AI Insights Configuration (optional - choose one provider)
# OpenAI (GPT-4)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google AI (Gemini)
GOOGLE_AI_API_KEY=
GOOGLE_MODEL=gemini-pro

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_MODEL=gpt-4