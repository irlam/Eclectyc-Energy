{% extends "base.twig" %}

{% block content %}
<div class="card">
    <h2>Error {{ error_code|default('500') }}</h2>
    
    <div class="alert alert-danger">
        <p>{{ error_message|default('An unexpected error occurred.') }}</p>
    </div>
    
    <div class="mt-3">
        <a href="/" class="btn btn-primary">Return to Dashboard</a>
    </div>
    
    {% if app.environment == 'development' and error_details %}
    <div class="card mt-3">
        <h3>Debug Information</h3>
        <pre style="background: #f3f4f6; padding: 1rem; overflow-x: auto;">{{ error_details }}</pre>
    </div>
    {% endif %}
</div>
{% endblock %}