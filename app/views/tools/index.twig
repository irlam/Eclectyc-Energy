{% extends "base.twig" %}

{% block title %}System Tools{% endblock %}

{% block content %}
<section class="card tools-card">
    <div class="card-header tools-card__header">
        <div>
            <h2>System Tools</h2>
            <p class="mb-0" style="color: var(--muted); font-size: 0.9rem;">
                Diagnostic and testing utilities for system administration
            </p>
        </div>
    </div>

    <div class="tools-grid">
        <!-- System Settings -->
        <div class="tool-card">
            <div class="tool-icon">‚öôÔ∏è</div>
            <h3>System Settings</h3>
            <p>Configure system-wide settings and import throttling</p>
            <div class="tool-actions">
                <a href="/tools/settings" class="btn btn-primary">Manage Settings</a>
            </div>
        </div>

        <!-- System Health Diagnostics -->
        <div class="tool-card">
            <div class="tool-icon">üè•</div>
            <h3>System Health</h3>
            <p>Check system status and diagnose degraded services</p>
            <div class="tool-actions">
                <a href="/tools/system-health" class="btn btn-primary">Run Diagnostics</a>
                <a href="/tools/system-health?verbose=1" class="btn btn-secondary">Verbose Mode</a>
            </div>
        </div>

        <!-- Email Testing -->
        <div class="tool-card">
            <div class="tool-icon">üìß</div>
            <h3>Email Testing</h3>
            <p>Test SMTP configuration and send test emails</p>
            <div class="tool-actions">
                <a href="/tools/email-test" class="btn btn-primary">Test Email</a>
            </div>
        </div>

        <!-- Structure Check -->
        <div class="tool-card">
            <div class="tool-icon">üîç</div>
            <h3>Structure Check</h3>
            <p>Validate database and file system structure</p>
            <div class="tool-actions">
                <a href="/tools/check" class="btn btn-primary">Check Structure</a>
            </div>
        </div>

        <!-- Structure Overview -->
        <div class="tool-card">
            <div class="tool-icon">üìä</div>
            <h3>Structure Overview</h3>
            <p>View complete system structure and statistics</p>
            <div class="tool-actions">
                <a href="/tools/show" class="btn btn-primary">View Structure</a>
            </div>
        </div>

        <!-- API Health -->
        <div class="tool-card">
            <div class="tool-icon">üîå</div>
            <h3>API Health</h3>
            <p>Check API endpoint health and response times</p>
            <div class="tool-actions">
                <a href="/api/health" class="btn btn-primary" target="_blank">View API Health</a>
            </div>
        </div>

        <!-- CLI Tools Documentation -->
        <div class="tool-card">
            <div class="tool-icon">‚å®Ô∏è</div>
            <h3>CLI Tools</h3>
            <p>Browse all available command-line tools and scripts</p>
            <div class="tool-actions">
                <a href="/tools/cli-tools" class="btn btn-primary">View CLI Tools</a>
            </div>
        </div>

        <!-- Cron Jobs Setup -->
        <div class="tool-card">
            <div class="tool-icon">üïê</div>
            <h3>Cron Jobs</h3>
            <p>Setup guide for automated task scheduling</p>
            <div class="tool-actions">
                <a href="/tools/cron-jobs" class="btn btn-primary">View Cron Setup</a>
            </div>
        </div>

        <!-- Database Migrations -->
        <div class="tool-card">
            <div class="tool-icon">üóÑÔ∏è</div>
            <h3>Database Migrations</h3>
            <p>View migration status and run pending migrations</p>
            <div class="tool-actions">
                <a href="/admin/meters" class="btn btn-secondary">View Meters</a>
                <a href="/admin/tariffs" class="btn btn-secondary">View Tariffs</a>
            </div>
        </div>

        <!-- SFTP Configurations -->
        <div class="tool-card">
            <div class="tool-icon">üìÅ</div>
            <h3>SFTP Connections</h3>
            <p>Configure SFTP servers for automatic CSV file retrieval</p>
            <div class="tool-actions">
                <a href="/tools/sftp" class="btn btn-primary">Manage SFTP</a>
            </div>
        </div>

        <!-- Application Logs -->
        <div class="tool-card">
            <div class="tool-icon">üìã</div>
            <h3>Application Logs</h3>
            <p>View and manage PHP error logs and diagnostics</p>
            <div class="tool-actions">
                <a href="/tools/logs" class="btn btn-primary">View Logs</a>
            </div>
        </div>

        <!-- Documentation -->
        <div class="tool-card">
            <div class="tool-icon">üìö</div>
            <h3>Documentation</h3>
            <p>Browse system documentation, guides, and technical specs</p>
            <div class="tool-actions">
                <a href="/tools/docs" class="btn btn-primary">View Docs</a>
            </div>
        </div>
    </div>

    <style>
    .tools-card {
        background: linear-gradient(180deg, #0f172a 0%, #111827 45%, #0b1120 100%);
        color: #e2e8f0;
        border: none;
        box-shadow: 0 25px 45px rgba(15, 23, 42, 0.45);
    }

    .tools-card__header {
        border-bottom: 1px solid rgba(148, 163, 184, 0.16);
        padding-bottom: 1rem;
    }

    .tools-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        padding: 1.5rem;
    }

    .tool-card {
        padding: 1.75rem;
        border-radius: 16px;
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.7) 0%, rgba(20, 30, 45, 0.6) 100%);
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15),
                    0 8px 16px rgba(0, 0, 0, 0.2);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .tool-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--brand) 0%, var(--brand-alt) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .tool-card:hover::before {
        opacity: 1;
    }

    .tool-card:hover {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.9) 0%, rgba(20, 30, 45, 0.8) 100%);
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.3),
                    0 12px 24px rgba(0, 0, 0, 0.3),
                    0 0 40px rgba(39, 224, 165, 0.1);
        transform: translateY(-4px);
    }

    .tool-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        display: inline-block;
        transition: transform 0.3s ease;
    }

    .tool-card:hover .tool-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .tool-card h3 {
        font-size: 1.3rem;
        margin-bottom: 0.75rem;
        color: #f8fafc;
        font-weight: 600;
    }

    .tool-card p {
        font-size: 0.95rem;
        color: #94a3b8;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .tool-actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tool-actions .btn {
        flex: 1;
        min-width: 100px;
        font-size: 0.875rem;
        transition: all 0.2s ease;
    }

    .tool-actions .btn:hover {
        transform: translateX(2px);
    }

    @media (max-width: 768px) {
        .tools-grid {
            grid-template-columns: 1fr;
        }
    }
    </style>
</section>
{% endblock %}
