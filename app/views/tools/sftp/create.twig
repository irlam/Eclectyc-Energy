{% extends "base.twig" %}

{% block title %}New SFTP Configuration{% endblock %}

{% block content %}
<section class="card sftp-card">
    <div class="card-header sftp-card__header">
        <h2>New SFTP Configuration</h2>
    </div>

    <form method="POST" action="/tools/sftp" class="sftp-form">
        <div class="form-group">
            <label for="name">Configuration Name *</label>
            <input type="text" id="name" name="name" required placeholder="e.g., Production Data Server">
            <small class="form-text">A friendly name to identify this configuration</small>
        </div>

        <div class="form-group">
            <label for="host">Host *</label>
            <input type="text" id="host" name="host" required placeholder="sftp.example.com">
            <small class="form-text">SFTP server hostname or IP address</small>
        </div>

        <div class="form-group">
            <label for="port">Port</label>
            <input type="number" id="port" name="port" value="22" min="1" max="65535">
            <small class="form-text">Default: 22</small>
        </div>

        <div class="form-group">
            <label for="username">Username *</label>
            <input type="text" id="username" name="username" required>
            <small class="form-text">SFTP login username</small>
        </div>

        <div class="form-group">
            <label for="password">Password *</label>
            <input type="password" id="password" name="password">
            <small class="form-text">SFTP password (encrypted in database)</small>
        </div>

        <div class="form-group">
            <label for="private_key_path">Private Key Path</label>
            <input type="text" id="private_key_path" name="private_key_path" placeholder="/path/to/private_key">
            <small class="form-text">Alternative to password authentication</small>
        </div>

        <div class="form-group">
            <label for="remote_directory">Remote Directory</label>
            <input type="text" id="remote_directory" name="remote_directory" value="/" placeholder="/">
            <small class="form-text">Directory to monitor for files</small>
        </div>

        <div class="form-group">
            <label for="file_pattern">File Pattern</label>
            <input type="text" id="file_pattern" name="file_pattern" value="*.csv" placeholder="*.csv">
            <small class="form-text">Pattern to match files (e.g., *.csv, data_*.csv)</small>
        </div>

        <div class="form-group">
            <label for="import_type">Import Type</label>
            <select id="import_type" name="import_type">
                <option value="hh">Half-hourly (HH)</option>
                <option value="daily">Daily</option>
            </select>
            <small class="form-text">Default import type for matched files</small>
        </div>

        <div class="form-group form-group-inline">
            <label class="checkbox-label">
                <input type="checkbox" name="auto_import" value="1">
                <span>
                    <strong>Auto Import</strong>
                    <small class="form-text">Automatically import matching files</small>
                </span>
            </label>
        </div>

        <div class="form-group form-group-inline">
            <label class="checkbox-label">
                <input type="checkbox" name="delete_after_import" value="1">
                <span>
                    <strong>Delete After Import</strong>
                    <small class="form-text">Delete files from SFTP after successful import</small>
                </span>
            </label>
        </div>

        <div class="form-group form-group-inline">
            <label class="checkbox-label">
                <input type="checkbox" name="is_active" value="1" checked>
                <span>
                    <strong>Active</strong>
                    <small class="form-text">Enable this configuration</small>
                </span>
            </label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">ðŸ’¾ Save Configuration</button>
            <a href="/tools/sftp" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</section>

<style>
.sftp-card {
    background: linear-gradient(180deg, #0f172a 0%, #111827 45%, #0b1120 100%);
    color: #e2e8f0;
    border: none;
    box-shadow: 0 25px 45px rgba(15, 23, 42, 0.45);
}

.sftp-card__header {
    border-bottom: 1px solid rgba(148, 163, 184, 0.16);
}

.sftp-form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.25rem;
    padding: 1.5rem;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group-inline {
    grid-column: 1 / -1;
}

.form-group label {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #e2e8f0;
}

.form-group input,
.form-group select {
    padding: 0.75rem;
    border: 1px solid rgba(71, 85, 105, 0.5);
    border-radius: 8px;
    background: rgba(15, 23, 42, 0.6);
    color: #e2e8f0;
    font-size: 0.95rem;
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
}

.form-text {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.85rem;
    color: #94a3b8;
}

.checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    padding: 0.75rem;
    background: rgba(30, 41, 59, 0.6);
    border-radius: 8px;
    border: 1px solid rgba(71, 85, 105, 0.3);
}

.checkbox-label input[type="checkbox"] {
    width: auto;
    margin: 0;
}

.form-actions {
    grid-column: 1 / -1;
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
}
</style>
{% endblock %}
