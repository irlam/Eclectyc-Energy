        background: linear-gradient(180deg, #0f172a 0%, #111827 45%, #0b1120 100%);
        color: #e2e8f0;
        border: none;
        box-shadow: 0 25px 45px rgba(15, 23, 42, 0.45);
    }

    .meters-card__header {
        border-bottom: 1px solid rgba(148, 163, 184, 0.16);
    }

    .meters-card__cta {
        background: linear-gradient(135deg, #38bdf8, #34d399);
        border: none;
        box-shadow: 0 10px 20px rgba(56, 189, 248, 0.25);
    }

    .meters-metrics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1rem;
        margin: 1.5rem 0;
    }

    .meters-metric {
        padding: 1rem;
        border-radius: 12px;
        background: rgba(30, 41, 59, 0.6);
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15);
    }

    .meters-metric span {
        display: block;
        font-size: 0.85rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        color: #94a3b8;
    }

    .meters-metric strong {
        font-size: 1.65rem;
        line-height: 1.2;
        color: #f8fafc;
    }

    .meters-quick-actions {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.85rem 1.2rem;
        border-radius: 12px;
        background: rgba(30, 64, 175, 0.18);
        box-shadow: inset 0 0 0 1px rgba(129, 140, 248, 0.35);
        font-size: 0.9rem;
        margin-bottom: 1.25rem;
    }

    .meters-quick-actions a {
        color: #60a5fa;
        text-decoration: none;
        font-weight: 600;
    }

    .meters-quick-actions span {
        color: rgba(148, 163, 184, 0.6);
    }

    .meters-table-wrapper {
        border-radius: 14px;
        overflow-x: auto;
        box-shadow: inset 0 0 0 1px rgba(51, 65, 85, 0.45);
        background: rgba(15, 23, 42, 0.6);
    }

    .meters-table {
        width: 100%;
        min-width: 1200px;
        border-collapse: separate;
        border-spacing: 0;
        color: #e2e8f0;
    }

    .meters-table thead {
        background: rgba(30, 41, 59, 0.85);
    }

    .meters-table th {
        padding: 0.85rem 1.1rem;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        color: #94a3b8;
        border-bottom: 1px solid rgba(71, 85, 105, 0.45);
    }

    .meters-table td {
        padding: 0.9rem 1.1rem;
        border-bottom: 1px solid rgba(51, 65, 85, 0.45);
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .meters-table tbody tr:hover {
        background: rgba(79, 70, 229, 0.14);
    }

    .meters-mpan {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        font-family: 'Source Code Pro', Menlo, Monaco, Consolas, "Courier New", monospace;
        font-size: 0.95rem;
    }

    .meters-mpan__code {
        padding: 0.35rem 0.55rem;
        border-radius: 6px;
        background: rgba(30, 41, 59, 0.7);
        box-shadow: inset 0 0 0 1px rgba(71, 85, 105, 0.55);
    }

    .meters-mpan__copy {
        border: none;
        background: rgba(59, 130, 246, 0.15);
        color: #60a5fa;
        padding: 0.35rem 0.6rem;
        border-radius: 6px;
        font-size: 0.75rem;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 0.08em;
    }

    .meters-mpan__copy:hover {
        background: rgba(59, 130, 246, 0.3);
    }

    .meters-pill {
        display: inline-block;
        padding: 0.3rem 0.65rem;
        border-radius: 999px;
        background: rgba(59, 130, 246, 0.18);
        color: #bfdbfe;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .meters-pill--muted {
        background: rgba(148, 163, 184, 0.18);
        color: rgba(226, 232, 240, 0.65);
    }

    .meters-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 70px;
        padding: 0.35rem 0.65rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.22);
    }

    .meters-badge--success {
        background: rgba(52, 211, 153, 0.18);
        color: #bbf7d0;
    }

    .meters-badge--muted {
        background: rgba(148, 163, 184, 0.1);
        color: rgba(203, 213, 225, 0.85);
    }

    .meters-status {
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        padding: 0.4rem 0.8rem;
        border-radius: 999px;
        font-size: 0.8rem;
        font-weight: 700;
        letter-spacing: 0.06em;
        text-transform: uppercase;
    }

    .meters-status::before {
        content: '';
        width: 0.6rem;
        height: 0.6rem;
        border-radius: 999px;
    }

    .meters-status--active {
        background: rgba(34, 197, 94, 0.18);
        color: #bbf7d0;
    }

    .meters-status--active::before {
        background: #22c55e;
        box-shadow: 0 0 8px rgba(34, 197, 94, 0.8);
    }

    .meters-status--inactive {
        background: rgba(148, 163, 184, 0.15);
        color: rgba(226, 232, 240, 0.7);
    }

    .meters-status--inactive::before {
        background: rgba(148, 163, 184, 0.8);
    }

    .meters-table td:last-child,
    .meters-table th:last-child {
        text-align: right;
    }

    .meters-getting-started {
        padding: 1rem 1.25rem;
        border-radius: 12px;
        margin-bottom: 1.25rem;
        background: rgba(30, 64, 175, 0.18);
        border: 1px solid rgba(129, 140, 248, 0.35);
        color: #CFE3FF;
    }

    .meters-getting-started h3 {
        color: #e0e7ff;
    }

    .meters-tip {
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: #cbd5e1;
    }

    .meters-empty-state {
        margin-top: 1.5rem;
        padding: 2rem;
        text-align: center;
        background: rgba(30, 41, 59, 0.6);
        border-radius: 12px;
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15);
        color: #94a3b8;
    }

    .meters-empty-state p:first-child {
        color: #cbd5e1;
    }

    .pagination-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1.5rem;
        padding: 1rem;
        background: rgba(30, 41, 59, 0.6);
        border-radius: 12px;
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15);
        flex-wrap: wrap;
        gap: 1rem;
    }

    .pagination-info {
        color: #94a3b8;
        font-size: 0.9rem;
    }

    .pagination-buttons {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .pagination-per-page {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #94a3b8;
        font-size: 0.9rem;
    }

    .pagination-per-page select {
        padding: 0.35rem 0.6rem;
        border-radius: 6px;
        background: rgba(30, 41, 59, 0.7);
        border: 1px solid rgba(148, 163, 184, 0.3);
        color: #e2e8f0;
        font-size: 0.9rem;
    }

    .pagination-per-page select:hover {
        border-color: rgba(148, 163, 184, 0.5);
    }
    </style>
</section>

<script>
function copyToClipboard(text) {
    if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(text).then(function() {
            // Could show a toast notification here
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = '‚úì';
            setTimeout(function() {
                btn.textContent = originalText;
            }, 1000);
        }).catch(function(err) {
            console.error('Failed to copy:', err);
        });
    } else {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        document.body.appendChild(textArea);
        textArea.select();
        try {
            document.execCommand('copy');
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = '‚úì';
            setTimeout(function() {
                btn.textContent = originalText;
            }, 1000);
        } catch (err) {
            console.error('Failed to copy:', err);
        }
        document.body.removeChild(textArea);
    }
}
</script>
{% endblock %}
