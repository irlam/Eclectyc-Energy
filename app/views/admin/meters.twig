{% extends "base.twig" %}

{% block title %}Meters{% endblock %}

{% block content %}
<section class="card meters-card">
    <div class="card-header meters-card__header">
        <div>
            <h2>Meters Management</h2>
            <p class="mb-2">Review registered MPANs and keep half-hourly coverage up to date.</p>
        </div>
        <a class="btn btn-primary meters-card__cta" href="/admin/meters/create">+ Add Meter</a>
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            {{ flash.message }}
        </div>
    {% endif %}

    {% if totals.count == 0 %}
        <div class="meters-getting-started">
            <h3 style="margin-top: 0;">üöÄ Getting Started</h3>
            <p>You don't have any meters registered yet. Before you can import consumption data, you need to add meters to the system.</p>
            <div style="margin-top: 1rem;">
                <a href="/admin/meters/create" class="btn btn-primary">‚ûï Add Your First Meter</a>
                <p class="meters-tip">
                    <strong>Tip:</strong> You'll need the MPAN (Meter Point Administration Number) for each meter you want to track.
                </p>
            </div>
        </div>
    {% endif %}

    <div class="meters-metrics">
        <div class="meters-metric">
            <span>Total meters</span>
            <strong>{{ totals.count }}</strong>
        </div>
        <div class="meters-metric">
            <span>Active meters</span>
            <strong>{{ totals.active }}</strong>
        </div>
        <div class="meters-metric">
            <span>Half-hourly</span>
            <strong>{{ totals.hh }}</strong>
        </div>
        <div class="meters-metric">
            <span>Daily meters</span>
            <strong>{{ totals.count - totals.hh }}</strong>
        </div>
    </div>

    {% if meters is not empty %}
        <div class="meters-quick-actions">
            <strong>üí° Quick Actions:</strong>
            <a href="/admin/imports">Import Data</a>
            <span>‚Ä¢</span>
            <a href="/reports/consumption">View Consumption</a>
            <span>‚Ä¢</span>
            <a href="/admin/imports/history">Import History</a>
        </div>

        <div class="meters-table-wrapper">
            <table class="table meters-table">
                <thead>
                    <tr>
                        <th>MPAN / Meter Code</th>
                        <th>Serial</th>
                        <th>Site</th>
                        <th>Supplier</th>
                        <th>Type</th>
                        <th>Half-hourly</th>
                        <th>Smart</th>
                        <th>Status</th>
                        <th>Added</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for meter in meters %}
                        <tr>
                            <td>
                                <div class="meters-mpan">
                                    <span class="meters-mpan__code">{{ meter.mpan }}</span>
                                    <button 
                                        onclick="copyToClipboard(this.dataset.mpan)"
                                        data-mpan="{{ meter.mpan|e('html_attr') }}"
                                        class="meters-mpan__copy"
                                        title="Copy MPAN"
                                    >Copy</button>
                                </div>
                            </td>
                            <td>{{ meter.serial_number ?: 'N/A' }}</td>
                            <td>{{ meter.site_name ?: '<span class="meters-pill meters-pill--muted">Unassigned</span>'|raw }}</td>
                            <td>{{ meter.supplier_name ?: '<span class="meters-pill meters-pill--muted">Unassigned</span>'|raw }}</td>
                            <td>
                                <span class="meters-pill">{{ meter.meter_type|title }}</span>
                            </td>
                            <td>
                                {% if meter.is_half_hourly %}
                                    <span class="meters-badge meters-badge--success">Yes</span>
                                {% else %}
                                    <span class="meters-badge meters-badge--muted">No</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if meter.is_smart_meter %}
                                    <span class="meters-badge meters-badge--success">Smart</span>
                                {% else %}
                                    <span class="meters-badge meters-badge--muted">Legacy</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if meter.is_active %}
                                    <span class="meters-status meters-status--active">Active</span>
                                {% else %}
                                    <span class="meters-status meters-status--inactive">Inactive</span>
                                {% endif %}
                            </td>
                            <td>{{ meter.created_at ? meter.created_at|date("d/m/Y") : 'N/A' }}</td>
                            <td>
                                <div class="meters-actions">
                                    <a href="/admin/meters/{{ meter.id }}/carbon" class="btn btn-sm btn-info" title="View carbon intensity">üåç Carbon</a>
                                    <a href="/admin/meters/{{ meter.id }}/edit" class="btn btn-sm btn-secondary" title="Edit meter">‚úèÔ∏è Edit</a>
                                    <form 
                                        method="post" 
                                        action="/admin/meters/{{ meter.id }}/delete" 
                                        style="display: inline;"
                                        data-confirm-delete="meter {{ meter.mpan }}"
                                        data-confirm-warning="This will permanently delete meter {{ meter.mpan }} and all associated readings. This action cannot be undone."
                                    >
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete meter">üóëÔ∏è Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if pagination.total_pages > 1 %}
            <div class="pagination-controls">
                <div class="pagination-info">
                    Showing {{ ((pagination.current_page - 1) * pagination.per_page) + 1 }} 
                    to {{ min(pagination.current_page * pagination.per_page, pagination.total_items) }} 
                    of {{ pagination.total_items }} meters
                </div>
                <div class="pagination-buttons">
                    {% if pagination.current_page > 1 %}
                        <a href="?page=1&per_page={{ pagination.per_page }}" class="btn btn-sm btn-secondary">First</a>
                        <a href="?page={{ pagination.current_page - 1 }}&per_page={{ pagination.per_page }}" class="btn btn-sm btn-secondary">Previous</a>
                    {% endif %}
                    
                    {% set start_page = max(1, pagination.current_page - 2) %}
                    {% set end_page = min(pagination.total_pages, pagination.current_page + 2) %}
                    
                    {% for i in start_page..end_page %}
                        {% if i == pagination.current_page %}
                            <span class="btn btn-sm btn-primary">{{ i }}</span>
                        {% else %}
                            <a href="?page={{ i }}&per_page={{ pagination.per_page }}" class="btn btn-sm btn-secondary">{{ i }}</a>
                        {% endif %}
                    {% endfor %}
                    
                    {% if pagination.current_page < pagination.total_pages %}
                        <a href="?page={{ pagination.current_page + 1 }}&per_page={{ pagination.per_page }}" class="btn btn-sm btn-secondary">Next</a>
                        <a href="?page={{ pagination.total_pages }}&per_page={{ pagination.per_page }}" class="btn btn-sm btn-secondary">Last</a>
                    {% endif %}
                </div>
                <div class="pagination-per-page">
                    <label for="per_page">Per page:</label>
                    <select id="per_page" onchange="window.location.href='?page=1&per_page=' + this.value">
                        <option value="10" {% if pagination.per_page == 10 %}selected{% endif %}>10</option>
                        <option value="25" {% if pagination.per_page == 25 %}selected{% endif %}>25</option>
                        <option value="50" {% if pagination.per_page == 50 %}selected{% endif %}>50</option>
                        <option value="100" {% if pagination.per_page == 100 %}selected{% endif %}>100</option>
                    </select>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="meters-empty-state">
            <p style="font-size: 1.1rem;">No meters found.</p>
            <p>Add meters manually or they will be created automatically during import if configured.</p>
        </div>
    {% endif %}
    <style>
