{% extends "base.twig" %}

{% block title %}AI Insights - {{ meter.mpan }}{% endblock %}

{% block content %}
<section class="card">
    <div class="card-header">
        <div>
            <h2>ü§ñ AI Insights - {{ meter.mpan }}</h2>
            <p class="mb-2">{{ meter.site_name }} ‚Ä¢ {{ meter.energy_type|upper }}</p>
        </div>
        <a class="btn btn-secondary" href="/admin/ai-insights">‚Üê Back to Overview</a>
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            {{ flash.message }}
        </div>
    {% endif %}

    {% if is_configured %}
        <div class="mb-4">
            <h3>Generate New Insight</h3>
            <form method="post" action="/admin/ai-insights/generate" class="form-inline">
                <input type="hidden" name="meter_id" value="{{ meter.id }}">
                <div class="form-group" style="flex: 1; max-width: 400px;">
                    <label for="insight_type">Insight Type</label>
                    <select name="insight_type" id="insight_type" class="form-control">
                        <option value="">All Types (Comprehensive)</option>
                        <option value="consumption_pattern">Consumption Patterns</option>
                        <option value="cost_optimization">Cost Optimization</option>
                        <option value="anomaly_detection">Anomaly Detection</option>
                        <option value="carbon_reduction">Carbon Reduction</option>
                        <option value="predictive_maintenance">Predictive Maintenance</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Generate Insight</button>
            </form>
        </div>
    {% else %}
        <div class="alert alert-warning">
            <strong>‚ö†Ô∏è AI Provider Not Configured</strong>
            <p>
                <a href="/admin/ai-insights/settings" class="btn btn-primary">Configure AI Provider</a>
            </p>
        </div>
    {% endif %}

    <h3 class="mt-4">Insights History</h3>
    {% if insights is not empty %}
        <div class="insights-list">
            {% for insight in insights %}
                <div class="insight-item priority-{{ insight.priority }}">
                    <div class="insight-meta">
                        <span class="insight-date">{{ insight.insight_date|date("d/m/Y") }}</span>
                        <span class="insight-type">{{ insight.insight_type|replace({'_': ' '})|title }}</span>
                        <span class="priority-badge priority-{{ insight.priority }}">
                            {{ insight.priority|upper }}
                        </span>
                        <span class="confidence">{{ insight.confidence_score }}% confidence</span>
                    </div>
                    
                    <h4>{{ insight.title }}</h4>
                    
                    <div class="insight-description">
                        {{ insight.description|nl2br }}
                    </div>
                    
                    {% if insight.recommendations is not empty %}
                        <div class="recommendations">
                            <h5>üí° Recommendations:</h5>
                            <ul>
                                {% for rec in insight.recommendations %}
                                    <li>{{ rec }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    
                    <div class="insight-actions">
                        <form method="post" action="/admin/ai-insights/{{ insight.id }}/dismiss" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-outline">
                                Dismiss This Insight
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted">No insights generated yet for this meter. Click "Generate Insight" above to create your first AI-powered analysis.</p>
    {% endif %}

    <div class="mt-4">
        <h3>About AI Insights</h3>
        <div class="info-grid">
            <div class="info-card">
                <h4>üìä Consumption Patterns</h4>
                <p>Identifies daily, weekly, and seasonal trends in energy usage. Helps understand usage patterns and baseload consumption.</p>
            </div>
            <div class="info-card">
                <h4>üí∞ Cost Optimization</h4>
                <p>Analyzes consumption against tariff structures to identify savings opportunities and optimal usage times.</p>
            </div>
            <div class="info-card">
                <h4>‚ö†Ô∏è Anomaly Detection</h4>
                <p>Detects unusual spikes, drops, or patterns that may indicate equipment issues or data quality problems.</p>
            </div>
            <div class="info-card">
                <h4>üå± Carbon Reduction</h4>
                <p>Suggests strategies to reduce carbon footprint through peak demand reduction and load shifting.</p>
            </div>
            <div class="info-card">
                <h4>üîß Predictive Maintenance</h4>
                <p>Anticipates potential equipment problems based on consumption patterns and historical data.</p>
            </div>
        </div>
    </div>
</section>

<style>
.form-inline {
    display: flex;
    gap: 1rem;
    align-items: flex-end;
}

.insights-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.insight-item {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1.5rem;
    background: white;
}

.insight-item.priority-high {
    border-left: 4px solid #dc3545;
}

.insight-item.priority-medium {
    border-left: 4px solid #ffc107;
}

.insight-item.priority-low {
    border-left: 4px solid #28a745;
}

.insight-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
}

.insight-meta span {
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
    background: #f5f5f5;
}

.insight-date {
    font-weight: bold;
}

.insight-type {
    background: #e3f2fd;
    color: #1976d2;
}

.priority-badge {
    font-weight: bold;
    color: white;
}

.priority-badge.priority-high {
    background: #dc3545;
}

.priority-badge.priority-medium {
    background: #ffc107;
    color: #000;
}

.priority-badge.priority-low {
    background: #28a745;
}

.confidence {
    background: #e8f5e9;
    color: #2e7d32;
}

.insight-item h4 {
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
}

.insight-description {
    margin-bottom: 1rem;
    line-height: 1.6;
}

.recommendations {
    background: #f8f9fa;
    border-left: 3px solid #007bff;
    padding: 1rem;
    margin: 1rem 0;
}

.recommendations h5 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
}

.recommendations ul {
    margin: 0.5rem 0 0 1.5rem;
}

.recommendations li {
    margin: 0.5rem 0;
}

.insight-actions {
    padding-top: 1rem;
    border-top: 1px solid #eee;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
}

.info-card {
    background: #f8f9fa;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
}

.info-card h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
}

.info-card p {
    margin: 0;
    font-size: 0.9rem;
    color: #666;
}
</style>
{% endblock %}
