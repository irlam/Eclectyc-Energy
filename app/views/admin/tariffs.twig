{% extends "base.twig" %}

{% block title %}Tariffs{% endblock %}

{% block content %}
<section class="card">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: start;">
        <div>
            <h2>Tariff Management</h2>
            <p class="mb-2">Monitor available supply tariffs and their rate structures.</p>
        </div>
        <a class="btn btn-primary" href="/admin/tariffs/create">+ Add Tariff</a>
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            {{ flash.message }}
        </div>
    {% endif %}

    {% if tariffs is not empty %}
        <div style="overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Supplier</th>
                        <th>Energy</th>
                        <th>Type</th>
                        <th class="text-right">Unit Rate (p)</th>
                        <th class="text-right">Standing (p/day)</th>
                        <th>Status</th>
                        <th>Valid</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tariff in tariffs %}
                        <tr class="tariff-row">
                            <td>
                                <strong>{{ tariff.name }}</strong><br>
                                <small>{{ tariff.code }}</small>
                            </td>
                            <td>{{ tariff.supplier_name }}</td>
                            <td>
                                <span class="badge badge-{{ tariff.energy_type == 'electricity' ? 'primary' : 'secondary' }}">
                                    {{ tariff.energy_type|title }}
                                </span>
                            </td>
                            <td>{{ tariff.tariff_type|replace({'_': ' '})|title }}</td>
                            <td class="text-right">
                                {% if tariff.unit_rate is not null %}
                                    {{ tariff.unit_rate|number_format(2, '.', ',') }}
                                {% else %}
                                    &mdash;
                                {% endif %}
                            </td>
                            <td class="text-right">
                                {% if tariff.standing_charge is not null %}
                                    {{ tariff.standing_charge|number_format(2, '.', ',') }}
                                {% else %}
                                    &mdash;
                                {% endif %}
                            </td>
                            <td>
                                {% if tariff.is_active %}
                                    <span class="status status-success">Active</span>
                                {% else %}
                                    <span class="status status-muted">Inactive</span>
                                {% endif %}
                            </td>
                            <td>
                                {{ tariff.valid_from|date("d/m/Y") }}
                                {% if tariff.valid_to %}
                                    &ndash; {{ tariff.valid_to|date("d/m/Y") }}
                                {% else %}
                                    <span class="badge">Open-ended</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="tariff-actions-row">
                            <td colspan="8">
                                <div class="tariff-actions">
                                    <a href="/admin/tariffs/{{ tariff.id }}/edit" class="btn btn-sm btn-secondary" title="Edit tariff">‚úèÔ∏è Edit</a>
                                    <form 
                                        method="post" 
                                        action="/admin/tariffs/{{ tariff.id }}/delete" 
                                        style="display: inline;"
                                        data-confirm-delete="tariff {{ tariff.name }}"
                                        data-confirm-warning="This will permanently delete the tariff '{{ tariff.name }}'. This action cannot be undone."
                                    >
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete tariff">üóëÔ∏è Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <style>
        .tariff-row {
            border-bottom: none !important;
        }
        
        .tariff-row td {
            border-bottom: none !important;
        }
        
        .tariff-actions-row {
            background: rgba(30, 41, 59, 0.4);
        }
        
        .tariff-actions-row td {
            padding: 0.6rem 1rem !important;
            border-bottom: 1px solid rgba(148, 163, 184, 0.15) !important;
        }
        
        .tariff-actions {
            display: flex;
            gap: 0.5rem;
            align-items: center;
            justify-content: flex-start;
            flex-wrap: wrap;
        }
        
        .tariff-actions form {
            margin: 0;
        }
        
        .tariff-row:hover,
        .tariff-row:hover + .tariff-actions-row {
            background: rgba(79, 70, 229, 0.08);
        }
        
        .tariff-actions-row:hover {
            background: rgba(79, 70, 229, 0.08);
        }
        
        .badge-primary {
            background: rgba(59, 130, 246, 0.2);
            color: #93c5fd;
            padding: 0.25rem 0.6rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .badge-secondary {
            background: rgba(148, 163, 184, 0.2);
            color: #cbd5e1;
            padding: 0.25rem 0.6rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        </style>
    {% else %}
        <p>No tariffs configured. <a href="/admin/tariffs/create">Create your first tariff</a> or use the seed process to add sample tariffs.</p>
    {% endif %}
</section>
{% endblock %}
