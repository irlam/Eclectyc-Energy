{% extends "base.twig" %}

{% block title %}Users{% endblock %}

{% block content %}
<section class="card">
    <div class="card-header">
        <div>
            <h2>User Accounts</h2>
            <p class="mb-2">Manage platform operators and administrators.</p>
        </div>
        <a class="btn btn-primary" href="/admin/users/create">+ Create User</a>
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            {{ flash.message }}
        </div>
    {% endif %}

    {% if users is empty %}
        <p>No users found. Run the database seed to create sample accounts or create a new user above.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Last Login</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.role|title }}</td>
                        <td>
                            {% if user.is_active %}
                                <span class="status status-success">Active</span>
                            {% else %}
                                <span class="status status-danger">Disabled</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.last_login %}
                                {{ user.last_login|date("d/m/Y H:i") }}
                            {% else %}
                                Never
                            {% endif %}
                        </td>
                        <td>{{ user.created_at|date("d/m/Y") }}</td>
                        <td>
                            <div class="action-buttons">
                                <a class="btn btn-sm btn-info" href="/admin/users/{{ user.id }}/access" title="Manage Access">ğŸ” Access</a>
                                <a class="btn btn-sm btn-secondary" href="/admin/users/{{ user.id }}/edit">Edit</a>
                                {% set isCurrentUser = auth.user and (auth.user.id == user.id) %}
                                {% if not isCurrentUser %}
                                    <form method="post" action="/admin/users/{{ user.id }}/delete" style="display: inline;" onsubmit="return confirm('Delete {{ user.name }}? This action cannot be undone.');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                {% else %}
                                    <span class="muted" style="font-size: 0.85rem;">Current session</span>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</section>
{% endblock %}
