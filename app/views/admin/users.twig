{% extends "base.twig" %}

{% block title %}Users{% endblock %}

{% block content %}
<section class="card">
    <div class="card-header">
        <div>
            <h2>User Accounts</h2>
            <p class="mb-2">Manage platform operators and administrators.</p>
        </div>
        <a class="btn btn-primary" href="/admin/users/create">+ Create User</a>
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            {{ flash.message }}
        </div>
    {% endif %}

    {% if users is empty %}
        <p>No users found. Run the database seed to create sample accounts or create a new user above.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Last Login</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.role|title }}</td>
                        <td>
                            {% if user.is_active %}
                                <span class="status status-success">Active</span>
                            {% else %}
                                <span class="status status-danger">Disabled</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.last_login %}
                                {{ user.last_login|date("d/m/Y H:i") }}
                            {% else %}
                                Never
                            {% endif %}
                        </td>
                        <td>{{ user.created_at|date("d/m/Y") }}</td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-secondary" title="Edit user (Coming soon)" disabled>Edit</button>
                                <button class="btn btn-sm btn-danger" title="Delete user (Coming soon)" disabled>Delete</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</section>
{% endblock %}
