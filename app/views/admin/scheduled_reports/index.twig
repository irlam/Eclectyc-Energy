{% extends "base.twig" %}

{% block title %}Scheduled Reports{% endblock %}

{% block content %}
<section class="card">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: start;">
        <div>
            <h2>Scheduled Reports</h2>
            <p class="mb-2">Configure and manage automated report generation and email delivery.</p>
        </div>
        <a class="btn btn-primary" href="/admin/scheduled-reports/create">+ Create Report</a>
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            {{ flash.message }}
        </div>
    {% endif %}

    {% if reports is not empty %}
        <div style="overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Format</th>
                        <th>Frequency</th>
                        <th>Next Run</th>
                        <th>Last Run</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for report in reports %}
                        <tr>
                            <td>
                                <strong>{{ report.name }}</strong>
                                {% if report.description %}
                                    <br><small>{{ report.description|truncate(50) }}</small>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge badge-primary">
                                    {{ report.report_type|replace({'_': ' '})|title }}
                                </span>
                            </td>
                            <td>{{ report.report_format|upper }}</td>
                            <td>
                                {{ report.frequency|title }}
                                {% if report.frequency == 'weekly' and report.day_of_week is not null %}
                                    <br><small>{{ ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'][report.day_of_week] }}</small>
                                {% elseif report.frequency == 'monthly' and report.day_of_month is not null %}
                                    <br><small>Day {{ report.day_of_month }}</small>
                                {% endif %}
                            </td>
                            <td>
                                {% if report.next_run_at %}
                                    {{ report.next_run_at|date("d/m/Y H:i") }}
                                {% else %}
                                    <span class="text-muted">N/A</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if report.last_run_at %}
                                    {{ report.last_run_at|date("d/m/Y H:i") }}
                                {% else %}
                                    <span class="text-muted">Never</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if report.is_active %}
                                    <span class="status status-success">Active</span>
                                {% else %}
                                    <span class="status status-muted">Inactive</span>
                                {% endif %}
                            </td>
                            <td class="actions">
                                <a href="/admin/scheduled-reports/{{ report.id }}/history" class="btn btn-sm">History</a>
                                <form method="post" action="/admin/scheduled-reports/{{ report.id }}/run" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-success">Run Now</button>
                                </form>
                                <a href="/admin/scheduled-reports/{{ report.id }}/edit" class="btn btn-sm btn-primary">Edit</a>
                                <form method="post" action="/admin/scheduled-reports/{{ report.id }}/delete" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this report?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <p>No scheduled reports configured yet. <a href="/admin/scheduled-reports/create">Create your first report</a> to automate report generation and email delivery.</p>
        </div>
    {% endif %}
</section>
{% endblock %}
