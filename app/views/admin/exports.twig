{% extends "base.twig" %}

{% block title %}Exports{% endblock %}

{% block content %}
<section class="card exports-card">
    <div class="card-header exports-card__header">
        <div>
            <h2>Export Activity</h2>
            <p class="mb-2">Monitor recent SFTP export jobs, including runtime details and any delivery issues.</p>
        </div>
        <span class="exports-cli-hint">Trigger exports from the CLI via <code class="exports-code">php scripts/export_sftp.php</code>.</span>
    </div>

    <form method="get" class="exports-filters">
        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status">
                <option value="">All statuses</option>
                <option value="pending"{% if filters.status == 'pending' %} selected{% endif %}>Pending</option>
                <option value="processing"{% if filters.status == 'processing' %} selected{% endif %}>Processing</option>
                <option value="completed"{% if filters.status == 'completed' %} selected{% endif %}>Completed</option>
                <option value="failed"{% if filters.status == 'failed' %} selected{% endif %}>Failed</option>
            </select>
        </div>
        <div class="form-group">
            <label for="type">Type</label>
            <select id="type" name="type">
                <option value="">All types</option>
                <option value="daily"{% if filters.type == 'daily' %} selected{% endif %}>Daily summary</option>
                <option value="site"{% if filters.type == 'site' %} selected{% endif %}>Site export</option>
                <option value="meter"{% if filters.type == 'meter' %} selected{% endif %}>Meter export</option>
            </select>
        </div>
        <div class="form-group">
            <label for="limit">Limit</label>
            <input id="limit" type="number" name="limit" min="10" max="200" value="{{ filters.limit }}">
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Apply</button>
        </div>
    </form>

    {% if error %}
        <div class="alert alert-danger">
            <p>{{ error }}</p>
        </div>
    {% endif %}

    {% if exports is empty %}
        <p class="exports-empty">No export runs recorded for the selected filters.</p>
    {% else %}
        <div class="exports-table-wrapper">
            <table class="table exports-table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Type</th>
                        <th scope="col">Format</th>
                        <th scope="col">File</th>
                        <th scope="col">Status</th>
                        <th scope="col">Size</th>
                        <th scope="col">Timeline</th>
                        <th scope="col">Operator</th>
                        <th scope="col">Errors</th>
                    </tr>
                </thead>
                <tbody>
                    {% for export in exports %}
                        <tr>
                            <td data-heading="ID">#{{ export.id }}</td>
                            <td data-heading="Type">{{ export.export_type|title }}</td>
                            <td data-heading="Format">{{ export.export_format|upper }}</td>
                            <td data-heading="File">
                                <div>{{ export.file_name }}</div>
                                {% if export.file_path %}
                                    <div class="exports-muted">{{ export.file_path }}</div>
                                {% endif %}
                            </td>
                            <td data-heading="Status">
                                <span class="status-pill status-{{ export.status }}">{{ export.status|capitalize }}</span>
                            </td>
                            <td data-heading="Size">
                                {% if export.file_size %}
                                    {{ (export.file_size / 1024)|number_format(2, '.', ',') }} KB
                                {% else %}
                                    <span class="exports-muted">n/a</span>
                                {% endif %}
                            </td>
                            <td data-heading="Timeline">
                                <div><strong>Created:</strong> {{ export.created_at|date('d M Y H:i') }}</div>
                                {% if export.completed_at %}
                                    <div><strong>Completed:</strong> {{ export.completed_at|date('d M Y H:i') }}</div>
                                {% endif %}
                            </td>
                            <td data-heading="Operator">
                                {% if export.user_name %}
                                    {{ export.user_name }}<br>
                                    <small class="exports-muted">{{ export.user_email }}</small>
                                {% else %}
                                    <span class="exports-muted">System</span>
                                {% endif %}
                            </td>
                            <td data-heading="Errors">
                                {% if export.error_message %}
                                    <span class="exports-error">{{ export.error_message }}</span>
                                {% else %}
                                    <span class="exports-muted">None</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <style>
    .exports-card {
        background: linear-gradient(180deg, #0f172a 0%, #111827 45%, #0b1120 100%);
        color: #e2e8f0;
        border: none;
        box-shadow: 0 25px 45px rgba(15, 23, 42, 0.45);
    }

    .exports-card__header {
        border-bottom: 1px solid rgba(148, 163, 184, 0.16);
    }

    .exports-cli-hint {
        color: #94a3b8;
        font-size: 0.9rem;
    }

    .exports-code {
        background: rgba(30, 41, 59, 0.7);
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        box-shadow: inset 0 0 0 1px rgba(71, 85, 105, 0.55);
        font-family: 'Source Code Pro', Menlo, Monaco, Consolas, "Courier New", monospace;
        color: #cbd5e1;
    }

    .exports-filters {
        display: flex;
        flex-wrap: wrap;
        gap: 1.25rem;
        align-items: flex-end;
        margin-bottom: 1.5rem;
        padding: 1rem 1.25rem;
        background: rgba(30, 41, 59, 0.6);
        border-radius: 12px;
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15);
    }

    .exports-filters .form-group {
        min-width: 160px;
        margin-bottom: 0;
    }

    .exports-filters .form-actions {
        margin-top: 0;
    }

    .exports-empty {
        color: #94a3b8;
        padding: 2rem;
        text-align: center;
        background: rgba(30, 41, 59, 0.6);
        border-radius: 12px;
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15);
    }

    .exports-table-wrapper {
        border-radius: 14px;
        overflow: hidden;
        box-shadow: inset 0 0 0 1px rgba(51, 65, 85, 0.45);
        background: rgba(15, 23, 42, 0.6);
    }

    .exports-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        color: #e2e8f0;
        margin-top: 0;
    }

    .exports-table thead {
        background: rgba(30, 41, 59, 0.85);
    }

    .exports-table th {
        padding: 0.85rem 1.1rem;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        color: #94a3b8;
        border-bottom: 1px solid rgba(71, 85, 105, 0.45);
    }

    .exports-table td {
        padding: 0.9rem 1.1rem;
        border-bottom: 1px solid rgba(51, 65, 85, 0.45);
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .exports-table tbody tr:hover {
        background: rgba(79, 70, 229, 0.14);
    }

    .exports-muted {
        color: #94a3b8;
        font-size: 0.85rem;
    }

    .exports-error {
        color: #fca5a5;
    }
    </style>
</section>
{% endblock %}
