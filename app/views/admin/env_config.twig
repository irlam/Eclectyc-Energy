{% extends "base.twig" %}

{% block title %}Environment Configuration{% endblock %}

{% block content %}
<section class="card">
    <div class="card-header">
        <div>
            <h2>üîß Environment Configuration</h2>
            <p class="mb-0" style="color: var(--muted); font-size: 0.9rem;">
                Configure all .env settings through the admin panel
            </p>
        </div>
        <div style="display: flex; gap: 0.5rem;">
            <a href="/tools/env-config/backup" class="btn btn-sm btn-secondary" title="Download current .env as backup">
                üíæ Download Backup
            </a>
            <button type="button" onclick="testPermissions()" class="btn btn-sm btn-secondary" title="Test file permissions">
                üîç Test Permissions
            </button>
        </div>
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            {{ flash.message }}
        </div>
    {% endif %}

    {% if error %}
        <div class="alert alert-error">
            <p><strong>Error:</strong> {{ error }}</p>
        </div>
    {% else %}
        {% if not is_writable %}
            <div class="alert alert-warning">
                <strong>‚ö†Ô∏è Warning: .env File Not Writable</strong>
                <p>The .env file at <code>{{ env_path }}</code> is not writable by the web server.</p>
                <p>To fix this, run: <code>chmod 664 {{ env_path }}</code></p>
                <p>You can still view settings below, but updates will fail until permissions are fixed.</p>
            </div>
        {% else %}
            <div class="alert alert-info">
                <strong>‚ÑπÔ∏è Important Information</strong>
                <ul class="mb-0">
                    <li><strong>Automatic Backup:</strong> A backup is created before each save</li>
                    <li><strong>Changes Take Effect:</strong> Most changes require a page reload or PHP-FPM restart</li>
                    <li><strong>Database Settings:</strong> Changing these requires reconnection</li>
                    <li><strong>Sensitive Data:</strong> Password fields are masked for security</li>
                </ul>
            </div>
        {% endif %}

        <form method="POST" action="/tools/env-config" class="env-config-form">
            {% for category, categorySettings in settings %}
                <div class="settings-category">
                    <h3 class="category-title">{{ category }}</h3>
                    
                    {% if category == 'Database' %}
                        <div class="category-warning">
                            <strong>‚ö†Ô∏è Warning:</strong> Changing database settings may break the application. 
                            Make sure you have correct values before saving.
                        </div>
                    {% elseif category == 'Application' %}
                        <div class="category-description">
                            <p>Core application settings that affect the overall behavior of the platform.</p>
                        </div>
                    {% elseif category == 'AI Insights' %}
                        <div class="category-description">
                            <p>Configure AI providers for intelligent energy insights. You can also configure these in 
                            <a href="/tools/settings">System Settings</a> (database-stored, no restart required).</p>
                        </div>
                    {% endif %}

                    <div class="settings-grid">
                        {% for key, setting in categorySettings %}
                            <div class="setting-item {% if setting.required %}required{% endif %}">
                                <div class="setting-header">
                                    <label for="env_{{ key }}" class="setting-label">
                                        {{ key }}
                                        {% if setting.required %}<span class="required-mark">*</span>{% endif %}
                                    </label>
                                    {% if setting.description %}
                                        <span class="setting-description">{{ setting.description }}</span>
                                    {% endif %}
                                </div>

                                <div class="setting-control">
                                    {% if setting.type == 'boolean' %}
                                        <label class="toggle-switch">
                                            <input 
                                                type="checkbox" 
                                                id="env_{{ key }}" 
                                                name="{{ key }}"
                                                {% if setting.value == 'true' %}checked{% endif %}
                                                {% if not is_writable %}disabled{% endif %}
                                            >
                                            <span class="toggle-slider"></span>
                                        </label>
                                        <span class="toggle-label">
                                            {% if setting.value == 'true' %}Enabled{% else %}Disabled{% endif %}
                                        </span>
                                        
                                    {% elseif setting.type == 'select' %}
                                        <select 
                                            id="env_{{ key }}" 
                                            name="{{ key }}"
                                            class="form-input"
                                            {% if not is_writable %}disabled{% endif %}
                                            {% if setting.required %}required{% endif %}
                                        >
                                            {% if not setting.required %}
                                                <option value="">-- Select --</option>
                                            {% endif %}
                                            {% for option in setting.options %}
                                                <option value="{{ option }}" {% if setting.value == option %}selected{% endif %}>
                                                    {{ option }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        
                                    {% elseif setting.type == 'number' %}
                                        <input 
                                            type="number" 
                                            id="env_{{ key }}" 
                                            name="{{ key }}"
                                            value="{{ setting.value }}"
                                            class="form-input"
                                            {% if not is_writable %}readonly{% endif %}
                                            {% if setting.required %}required{% endif %}
                                        >
                                        
                                    {% elseif setting.type == 'password' %}
                                        <input 
                                            type="password" 
                                            id="env_{{ key }}" 
                                            name="{{ key }}"
                                            value="{{ setting.value }}"
                                            class="form-input"
                                            {% if not is_writable %}readonly{% endif %}
                                            {% if setting.required %}required{% endif %}
                                            placeholder="{% if setting.value %}‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢{% else %}Enter {{ setting.description|lower }}{% endif %}"
                                        >
                                        {% if setting.value %}
                                            <button type="button" class="btn-show-password" onclick="togglePassword('env_{{ key }}')">
                                                üëÅÔ∏è
                                            </button>
                                        {% endif %}
                                        
                                    {% elseif setting.type == 'email' %}
                                        <input 
                                            type="email" 
                                            id="env_{{ key }}" 
                                            name="{{ key }}"
                                            value="{{ setting.value }}"
                                            class="form-input"
                                            {% if not is_writable %}readonly{% endif %}
                                            {% if setting.required %}required{% endif %}
                                        >
                                        
                                    {% elseif setting.type == 'url' %}
                                        <input 
                                            type="url" 
                                            id="env_{{ key }}" 
                                            name="{{ key }}"
                                            value="{{ setting.value }}"
                                            class="form-input"
                                            {% if not is_writable %}readonly{% endif %}
                                            {% if setting.required %}required{% endif %}
                                            placeholder="https://..."
                                        >
                                        
                                    {% else %}
                                        <input 
                                            type="text" 
                                            id="env_{{ key }}" 
                                            name="{{ key }}"
                                            value="{{ setting.value }}"
                                            class="form-input"
                                            {% if not is_writable %}readonly{% endif %}
                                            {% if setting.required %}required{% endif %}
                                        >
                                    {% endif %}
                                </div>

                                {% if key == 'APP_ENV' %}
                                    <div class="setting-note">
                                        <strong>Current:</strong> {{ setting.value }}. 
                                        {% if setting.value == 'production' %}
                                            Production mode - debug disabled, errors logged.
                                        {% elseif setting.value == 'development' %}
                                            Development mode - detailed errors shown.
                                        {% endif %}
                                    </div>
                                {% elseif key == 'APP_DEBUG' and setting.value == 'true' %}
                                    <div class="setting-note warning">
                                        <strong>Warning:</strong> Debug mode is enabled. Disable in production!
                                    </div>
                                {% elseif key == 'DB_PASSWORD' %}
                                    <div class="setting-note">
                                        <strong>Security:</strong> Password is masked. Leave empty to keep current value.
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

            <div class="form-actions">
                {% if is_writable %}
                    <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to update the .env file? A backup will be created automatically.')">
                        üíæ Save All Changes
                    </button>
                    <span class="help-text">* Required fields</span>
                {% else %}
                    <button type="button" class="btn btn-secondary" disabled>
                        üíæ Save All Changes (File Not Writable)
                    </button>
                {% endif %}
            </div>
        </form>
    {% endif %}
</section>

<style>
.env-config-form {
    margin-top: 1.5rem;
}

.settings-category {
    margin-bottom: 3rem;
    padding: 1.5rem;
    background: var(--card);
    border-radius: var(--radius);
    border: 1px solid var(--line);
}

.category-title {
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
    color: var(--brand);
    border-bottom: 2px solid var(--brand);
    padding-bottom: 0.5rem;
}

.category-description {
    background: rgba(87, 161, 255, 0.1);
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1.5rem;
    border-left: 4px solid var(--brand-alt);
}

.category-description p {
    margin: 0;
    color: var(--brand-alt);
}

.category-warning {
    background: rgba(244, 183, 64, 0.1);
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1.5rem;
    border-left: 4px solid var(--warning);
    color: var(--warning);
}

.settings-grid {
    display: grid;
    gap: 1.5rem;
}

.setting-item {
    background: rgba(255, 255, 255, 0.03);
    padding: 1rem;
    border-radius: 6px;
    border: 1px solid var(--line);
}

.setting-item.required {
    border-left: 3px solid var(--brand);
}

.setting-header {
    margin-bottom: 0.75rem;
}

.setting-label {
    display: block;
    font-weight: 600;
    color: var(--ink);
    font-size: 0.9rem;
    font-family: 'Courier New', monospace;
    margin-bottom: 0.25rem;
}

.required-mark {
    color: var(--danger);
    margin-left: 0.25rem;
}

.setting-description {
    display: block;
    font-size: 0.85rem;
    color: var(--muted);
    margin-top: 0.25rem;
}

.setting-control {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-input {
    flex: 1;
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--line);
    border-radius: 6px;
    font-size: 0.9rem;
    font-family: 'Courier New', monospace;
    background: rgba(255, 255, 255, 0.05);
    color: var(--ink);
}

.form-input:focus {
    outline: none;
    border-color: var(--brand);
    box-shadow: 0 0 0 3px rgba(39, 224, 165, 0.1);
}

.form-input:read-only {
    background: rgba(255, 255, 255, 0.02);
    color: var(--muted);
}

.btn-show-password {
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--line);
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    color: var(--ink);
}

.btn-show-password:hover {
    background: rgba(255, 255, 255, 0.08);
}

.setting-note {
    margin-top: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(87, 161, 255, 0.08);
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--brand-alt);
}

.setting-note.warning {
    background: rgba(244, 183, 64, 0.1);
    color: var(--warning);
}

.setting-note.info {
    background: rgba(39, 224, 165, 0.08);
    color: var(--brand);
}

.toggle-switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 28px;
}

.toggle-switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.toggle-slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.1);
    transition: 0.4s;
    border-radius: 28px;
}

.toggle-slider:before {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 4px;
    bottom: 4px;
    background-color: var(--ink);
    transition: 0.4s;
    border-radius: 50%;
}

.toggle-switch input:checked + .toggle-slider {
    background-color: var(--brand);
}

.toggle-switch input:checked + .toggle-slider:before {
    transform: translateX(22px);
}

.toggle-switch input:disabled + .toggle-slider {
    opacity: 0.5;
    cursor: not-allowed;
}

.toggle-label {
    font-size: 0.9rem;
    color: var(--muted);
}

.form-actions {
    margin-top: 2rem;
    padding: 1.5rem;
    background: var(--card);
    border-radius: var(--radius);
    display: flex;
    align-items: center;
    gap: 1rem;
}

.help-text {
    color: var(--muted);
    font-size: 0.9rem;
}
</style>

<script>
function togglePassword(fieldId) {
    const field = document.getElementById(fieldId);
    field.type = field.type === 'password' ? 'text' : 'password';
}

function testPermissions() {
    fetch('/tools/env-config/test')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                let message = `File: ${data.path}\n`;
                message += `Permissions: ${data.permissions}\n`;
                message += `Owner: ${data.owner}\n`;
                message += `Group: ${data.group}\n`;
                message += `Writable: ${data.writable ? 'YES ‚úì' : 'NO ‚úó'}\n\n`;
                message += data.message;
                alert(message);
            } else {
                alert('Error: ' + data.error);
            }
        })
        .catch(error => {
            alert('Failed to test permissions: ' + error);
        });
}
</script>
{% endblock %}
