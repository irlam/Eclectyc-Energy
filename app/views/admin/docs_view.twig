{% extends "base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="card">
    <div class="card-header">
        <div>
            <a href="/tools/docs" class="breadcrumb-link">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15,18 9,12 15,6"/>
                </svg>
                Back to Documentation
            </a>
            <h2>{{ title }}</h2>
            <p class="doc-meta">
                <span class="doc-filename-tag">{{ filename }}</span>
                <span class="doc-modified">Last modified: {{ modified }}</span>
            </p>
        </div>
    </div>

    <div class="markdown-content">
        {{ content|raw }}
    </div>
</section>

<style>
.breadcrumb-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    color: #6b7280;
    text-decoration: none;
    margin-bottom: 1rem;
    transition: color 0.2s ease;
}

.breadcrumb-link:hover {
    color: #3b82f6;
}

.doc-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: #6b7280;
}

.doc-filename-tag {
    font-family: 'Courier New', monospace;
    background: #f3f4f6;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 500;
}

.doc-modified {
    color: #9ca3af;
}

.markdown-content {
    padding: 2rem 0;
    line-height: 1.7;
    color: #374151;
}

/* Markdown Styling */
.markdown-content h1 {
    font-size: 2.25rem;
    font-weight: 700;
    margin: 2rem 0 1rem 0;
    color: #111827;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.5rem;
}

.markdown-content h2 {
    font-size: 1.875rem;
    font-weight: 600;
    margin: 1.75rem 0 1rem 0;
    color: #1f2937;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 0.5rem;
}

.markdown-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
    color: #374151;
}

.markdown-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.25rem 0 0.5rem 0;
    color: #4b5563;
}

.markdown-content h5 {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 1rem 0 0.5rem 0;
    color: #6b7280;
}

.markdown-content h6 {
    font-size: 1rem;
    font-weight: 600;
    margin: 1rem 0 0.5rem 0;
    color: #9ca3af;
}

.markdown-content p {
    margin: 1rem 0;
}

.markdown-content a {
    color: #3b82f6;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
}

.markdown-content a:hover {
    border-bottom-color: #3b82f6;
}

.markdown-content ul,
.markdown-content ol {
    margin: 1rem 0;
    padding-left: 2rem;
}

.markdown-content li {
    margin: 0.5rem 0;
}

.markdown-content ul ul,
.markdown-content ol ol,
.markdown-content ul ol,
.markdown-content ol ul {
    margin: 0.25rem 0;
}

.markdown-content code {
    font-family: 'Courier New', Consolas, Monaco, monospace;
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
    font-size: 0.875em;
    color: #e83e8c;
}

.markdown-content pre {
    background: #1f2937;
    color: #f9fafb;
    padding: 1rem 1.5rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border-left: 4px solid #3b82f6;
}

.markdown-content pre code {
    background: transparent;
    padding: 0;
    color: inherit;
    font-size: 0.875rem;
}

.markdown-content blockquote {
    border-left: 4px solid #3b82f6;
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: #6b7280;
    font-style: italic;
    background: #f9fafb;
    padding: 1rem 1.5rem;
    border-radius: 0 4px 4px 0;
}

.markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 6px;
    overflow: hidden;
}

.markdown-content thead {
    background: #f9fafb;
}

.markdown-content th {
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    color: #111827;
    border-bottom: 2px solid #e5e7eb;
}

.markdown-content td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #e5e7eb;
}

.markdown-content tr:last-child td {
    border-bottom: none;
}

.markdown-content tbody tr:hover {
    background: #f9fafb;
}

.markdown-content hr {
    border: none;
    border-top: 2px solid #e5e7eb;
    margin: 2rem 0;
}

.markdown-content img {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 1.5rem 0;
}

.markdown-content strong {
    font-weight: 600;
    color: #111827;
}

.markdown-content em {
    font-style: italic;
}

/* Special callouts for notes, warnings, etc */
.markdown-content blockquote p:first-child:before {
    content: "ℹ️ ";
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .markdown-content {
        padding: 1rem 0;
    }
    
    .markdown-content h1 {
        font-size: 1.75rem;
    }
    
    .markdown-content h2 {
        font-size: 1.5rem;
    }
    
    .markdown-content h3 {
        font-size: 1.25rem;
    }
    
    .markdown-content pre {
        padding: 0.75rem 1rem;
        font-size: 0.8125rem;
    }
    
    .markdown-content table {
        font-size: 0.875rem;
    }
    
    .doc-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
}
</style>
{% endblock %}
