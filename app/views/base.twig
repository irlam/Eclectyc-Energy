{# eclectyc-energy/app/views/base.twig #}
{# Base template for all pages #}
{# Last updated: 06/11/2025 22:45:00 #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{{ page_title|default('Dashboard') }}{% endblock %} - {{ app_name }}</title>
    
    <link rel="stylesheet" href="/assets/css/style.css">
    {% block styles %}{% endblock %}
</head>
<body>
    <div class="grain" aria-hidden="true"></div>

    <header class="header">
        <div class="container">
            <a href="/" class="header__brand" aria-label="{{ app_name }} dashboard">
                <span class="logo-mark" aria-hidden="true"></span>
                <h1>{{ app_name }}</h1>
            </a>
            <div class="header__actions">
                {% if auth.check %}
                    <span>Signed in as {{ auth.user.name ?? auth.user.email }}</span>
                    <a href="/logout">Sign out</a>
                {% else %}
                    <a href="/login">Sign in</a>
                {% endif %}
            </div>
            <div id="health-status" class="status status-success">Checking...</div>
        </div>
    </header>
    
    {% if auth.check %}
        {% set role = auth.user.role ?? 'viewer' %}
        <nav class="nav">
            <div class="container">
                <ul>
                    <li><a href="/">Dashboard</a></li>

                    {% if role in ['admin', 'manager'] %}
                        <li><a href="/reports/consumption">Reports</a></li>
                    {% endif %}

                    {% if role == 'admin' %}
                        <li><a href="/admin/imports">Imports</a></li>
                        <li><a href="/admin/imports/history">Import History</a></li>
                        <li><a href="/admin/exports">Exports</a></li>
                        <li><a href="/admin/meters">Meters</a></li>
                        <li><a href="/admin/sites">Sites</a></li>
                        <li><a href="/admin/tariffs">Tariffs</a></li>
                        <li><a href="/admin/users">Users</a></li>
                        <li><a href="/tools/show">Tools</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    {% endif %}
    
    <main class="main">
        <div class="container">
            <div id="notifications"></div>
            {% block content %}{% endblock %}
        </div>
    </main>
    
    <footer class="footer">
        <div class="container">
            <p>&copy; {{ current_year }} {{ app_name }}. All rights reserved.</p>
            <p><small id="last-check">System Status: Loading...</small></p>
        </div>
    </footer>
    
    <script src="/assets/js/app.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>