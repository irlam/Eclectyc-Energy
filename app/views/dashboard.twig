{% extends "base.twig" %}

{% block content %}
<h2>Energy Management Dashboard</h2>

<div class="grid grid-cols-1 md:grid-cols-4 gap-3 mt-3">
    <div class="card">
        <h3>Total Sites</h3>
        <p class="text-center" style="font-size: 2rem; font-weight: bold;">{{ stats.total_sites }}</p>
    </div>

    <div class="card">
        <h3>Total Meters</h3>
        <p class="text-center" style="font-size: 2rem; font-weight: bold;">{{ stats.total_meters }}</p>
    </div>

    <div class="card">
        <h3>Week to Date Consumption</h3>
        <p class="text-center" style="font-size: 1.8rem; font-weight: bold;">{{ stats.week_consumption|number_format(1, '.', ',') }}<small> kWh</small></p>
    </div>

    <div class="card">
        <h3>Data Coverage</h3>
        <p class="text-center" style="font-size: 1.8rem; font-weight: bold;">{{ stats.coverage_pct }}%</p>
        {% if stats.latest_aggregation_date %}
            <p class="text-center"><small>Latest snapshot: {{ stats.latest_aggregation_date|date("d/m/Y") }}</small></p>
        {% endif %}
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-3 mt-3">
    <div class="card">
        <h3>Total Readings</h3>
        <p class="text-center" style="font-size: 2rem; font-weight: bold;">{{ stats.total_readings|number_format }}</p>
    </div>

    <div class="card">
        <h3>Month to Date Consumption</h3>
        <p class="text-center" style="font-size: 1.8rem; font-weight: bold;">{{ stats.month_consumption|number_format(1, '.', ',') }}<small> kWh</small></p>
    </div>

    <div class="card">
        <h3>Last Import</h3>
        <p class="text-center" style="font-size: 1rem;">{{ stats.last_import }}</p>
    </div>
</div>

<div class="card mt-3">
    <h2>System Overview</h2>
    
    <div class="alert alert-info">
        Welcome to the Eclectyc Energy Management Platform. This system provides comprehensive energy monitoring, 
        analysis, and reporting capabilities for your organisation.
    </div>
    
    <h3>Quick Actions</h3>
    <div class="mt-2">
        <a href="/admin/sites" class="btn btn-primary">Manage Sites</a>
        <a href="/reports/consumption" class="btn btn-secondary">View Reports</a>
        <a href="/api/health" class="btn btn-secondary" target="_blank">API Health Check</a>
        <a href="/tools/check-structure" class="btn btn-secondary">Check Structure</a>
    </div>
</div>

<div class="card mt-3">
    <h2>Recent Activity</h2>
    {% if recent_activity is not empty %}
        <table class="table sortable-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Action</th>
                    <th>Entity</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                {% for item in recent_activity %}
                    <tr>
                        <td>{{ item.created_at|date("d/m/Y H:i:s") }}</td>
                        <td>{{ item.action }}</td>
                        <td>{{ item.entity_type ?: 'system' }}</td>
                        <td>{{ item.user_id ?: 'system' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No audit activity recorded yet.</p>
    {% endif %}
</div>

<div class="card mt-3">
    <h2>Energy Consumption Chart</h2>
    {% if trend is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th class="text-right">Consumption (kWh)</th>
                </tr>
            </thead>
            <tbody>
                {% for point in trend %}
                    <tr>
                        <td>{{ point.date|date("D d/m") }}</td>
                        <td class="text-right">{{ point.total|number_format(1, '.', ',') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No aggregated consumption data found for the last 7 days.</p>
    {% endif %}
</div>
{% endblock %}

{% block scripts %}
<script>
// Dashboard-specific JavaScript
document.addEventListener('DOMContentLoaded', function() {
    console.log('Dashboard loaded with trend data:', {{ trend|json_encode|raw }});
});
</script>
{% endblock %}