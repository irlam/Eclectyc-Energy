{% extends "base.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
<section class="card">
    <h1 class="mb-3">Sign In</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <form method="post" action="/login">
        <div class="form-group">
            <label class="form-label" for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email" value="{{ old.email ?? '' }}" required autofocus>
        </div>

        <div class="form-group">
            <label class="form-label" for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>

        {% if redirect %}
            <input type="hidden" name="redirect" value="{{ redirect }}">
        {% endif %}

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </form>
</section>

<section class="card">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; gap: 1rem;">
        <div>
            <h2 class="mb-1">Interactive Showcase</h2>
            <p class="muted-text">Explore the full platform experience without signing in.</p>
        </div>
        <a class="btn btn-secondary" href="/showcase/index.html" target="_blank" rel="noopener">Open Fullscreen</a>
    </div>
    <div class="showcase-frame-wrapper">
        <iframe
            class="showcase-iframe"
            src="/showcase/index.html"
            title="Eclectyc Energy Showcase"
            loading="lazy"
            allowfullscreen
        ></iframe>
    </div>
</section>
{% endblock %}
