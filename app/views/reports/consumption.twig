{% extends "base.twig" %}

{% block title %}Consumption Report{% endblock %}

{% block content %}
{% include 'reports/_subnav.twig' %}

<section class="card consumption-card">
    <div class="card-header consumption-card__header">
        <div>
            <h2>Energy Consumption Report</h2>
            <p class="mb-2">
                Last updated: {{ "now"|date("d/m/Y H:i:s") }}
            </p>
        </div>
        <button onclick="window.location.reload()" class="btn btn-secondary" style="white-space: nowrap;">
            ↻ Refresh
        </button>
    </div>

    <!-- Date Range Selector -->
    <form method="GET" class="consumption-filters">
        <div class="form-group">
            <label for="start">Start Date</label>
            <input type="date" id="start" name="start" value="{{ period.start|date('Y-m-d') }}" required>
        </div>
        <div class="form-group">
            <label for="end">End Date</label>
            <input type="date" id="end" name="end" value="{{ period.end|date('Y-m-d') }}" required>
        </div>
        <div class="form-group" style="display: flex; flex-direction: column; justify-content: flex-end;">
            <label class="consumption-checkbox" style="margin-bottom: 0.5rem;">
                <input type="checkbox" name="per_metric" value="1" {% if showPerMetric %}checked{% endif %}>
                <span style="margin-left: 0.5rem;">Show per-metric analysis</span>
            </label>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Update Report</button>
        </div>
        <div class="form-group" style="display: flex; align-items: flex-end; gap: 0.5rem;">
            <button type="button" onclick="setQuickRange(7)" class="btn btn-secondary" style="flex: 1; font-size: 0.85rem;">Last 7 days</button>
            <button type="button" onclick="setQuickRange(30)" class="btn btn-secondary" style="flex: 1; font-size: 0.85rem;">Last 30 days</button>
        </div>
    </form>

    {% if report.error is defined %}
        <div class="alert alert-danger">{{ report.error }}</div>
    {% endif %}

    {% if showPerMetric and not report.hasMetricData %}
        <div class="alert alert-warning">
            <strong>⚠️ No metric variables configured</strong>
            <p style="margin-top: 0.5rem;">
                Per-metric analysis requires meters to have metric variables configured. 
                <a href="/admin/meters" style="color: #fef3c7; text-decoration: underline;">Configure metric variables</a> to enable this feature.
            </p>
        </div>
    {% endif %}

    {% if report.rows is not empty %}
        <div class="consumption-stats">
            <div class="consumption-stat">
                <span>Total consumption</span>
                <strong>{{ report.totalConsumption|number_format(1, '.', ',') }} kWh</strong>
            </div>
            {% if showPerMetric and report.hasMetricData %}
            <div class="consumption-stat" style="background: rgba(16, 185, 129, 0.15); border: 1px solid rgba(16, 185, 129, 0.3);">
                <span>Total per metric</span>
                <strong>{{ report.totalPerMetric|number_format(3, '.', ',') }}</strong>
            </div>
            {% endif %}
            <div class="consumption-stat">
                <span>Sites with data</span>
                <strong>{{ report.rows|length }}</strong>
            </div>
            <div class="consumption-stat">
                <span>Reporting period</span>
                <strong>{{ (period.end.diff(period.start).days + 1) }} days</strong>
            </div>
            <div class="consumption-stat">
                <span>Average per day</span>
                {% set dayCount = period.end.diff(period.start).days + 1 %}
                <strong>{{ (report.totalConsumption > 0 and dayCount > 0) ? (report.totalConsumption / dayCount)|number_format(1, '.', ',') : '0.0' }} kWh</strong>
            </div>
        </div>

        <div class="consumption-table-wrapper">
            <table class="table consumption-table">
                <thead>
                    <tr>
                        <th>Site</th>
                        <th class="text-right">Meters</th>
                        <th class="text-right">Consumption (kWh)</th>
                        {% if showPerMetric %}
                        <th class="text-right">Per Metric</th>
                        <th>Metric Type</th>
                        {% endif %}
                        <th class="text-right">% of Total</th>
                        <th>Data range</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in report.rows %}
                        <tr>
                            <td>{{ row.site_name }}</td>
                            <td class="text-right">{{ row.meter_count }}</td>
                            <td class="text-right">{{ row.total_consumption|number_format(1, '.', ',') }}</td>
                            {% if showPerMetric %}
                            <td class="text-right">
                                {% if row.meters_with_metric > 0 %}
                                    <span style="color: #86efac;">{{ row.total_per_metric|number_format(3, '.', ',') }}</span>
                                {% else %}
                                    <span style="color: #94a3b8;">N/A</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if row.metric_names %}
                                    <span style="font-size: 0.85rem; color: #cbd5e1;">{{ row.metric_names }}</span>
                                {% else %}
                                    <span style="color: #94a3b8;">-</span>
                                {% endif %}
                            </td>
                            {% endif %}
                            <td class="text-right">{{ (report.totalConsumption > 0 and row.total_consumption is defined) ? ((row.total_consumption / report.totalConsumption) * 100)|number_format(1) : '0.0' }}%</td>
                            <td>
                                {% if row.first_reading and row.last_reading %}
                                    {{ row.first_reading|date("d/m/Y") }}
                                    &ndash;
                                    {{ row.last_reading|date("d/m/Y") }}
                                {% else %}
                                    <span style="color: #94a3b8;">No data</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="consumption-no-data">
            <strong>No meter readings found for the selected period.</strong>
            <p style="margin-top: 0.5rem;">This could mean:</p>
            <ul style="margin: 0.5rem 0;">
                <li>No data has been imported yet for this date range</li>
                <li>The aggregation process hasn't run for this period</li>
                <li>All meters are inactive or have no readings</li>
            </ul>
            <div style="margin-top: 1rem;">
                <a href="/admin/imports" class="btn btn-primary">Import Data</a>
                <a href="/admin/meters" class="btn btn-secondary" style="margin-left: 0.5rem;">Manage Meters</a>
            </div>
        </div>
    {% endif %}

    <style>
    .consumption-card {
        background: linear-gradient(180deg, #0f172a 0%, #111827 45%, #0b1120 100%);
        color: #e2e8f0;
        border: none;
        box-shadow: 0 25px 45px rgba(15, 23, 42, 0.45);
    }

    .consumption-card__header {
        border-bottom: 1px solid rgba(148, 163, 184, 0.16);
    }

    .consumption-filters {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.25rem;
        margin-bottom: 1.5rem;
        padding: 1rem 1.25rem;
        background: rgba(30, 41, 59, 0.6);
        border-radius: 12px;
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15);
    }

    .consumption-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1rem;
        margin: 1.5rem 0;
    }

    .consumption-stat {
        padding: 1rem;
        border-radius: 12px;
        background: rgba(30, 41, 59, 0.6);
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.15);
    }

    .consumption-stat span {
        display: block;
        font-size: 0.85rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        color: #94a3b8;
    }

    .consumption-stat strong {
        font-size: 1.65rem;
        line-height: 1.2;
        color: #f8fafc;
    }

    .consumption-table-wrapper {
        border-radius: 14px;
        overflow: hidden;
        box-shadow: inset 0 0 0 1px rgba(51, 65, 85, 0.45);
        background: rgba(15, 23, 42, 0.6);
    }

    .consumption-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        color: #e2e8f0;
        margin-top: 0;
    }

    .consumption-table thead {
        background: rgba(30, 41, 59, 0.85);
    }

    .consumption-table th {
        padding: 0.85rem 1.1rem;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        color: #94a3b8;
        border-bottom: 1px solid rgba(71, 85, 105, 0.45);
    }

    .consumption-table td {
        padding: 0.9rem 1.1rem;
        border-bottom: 1px solid rgba(51, 65, 85, 0.45);
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .consumption-table tbody tr:hover {
        background: rgba(79, 70, 229, 0.14);
    }

    .consumption-no-data {
        padding: 1.5rem;
        border-radius: 12px;
        background: rgba(244, 183, 64, 0.18);
        border: 1px solid rgba(244, 183, 64, 0.45);
        color: #FFE9C4;
    }

    .consumption-no-data strong {
        color: #fef3c7;
    }

    .consumption-no-data a {
        margin-top: 0.5rem;
    }

    .consumption-checkbox {
        display: flex;
        align-items: center;
        color: #e2e8f0;
        cursor: pointer;
    }

    .consumption-checkbox input[type="checkbox"] {
        cursor: pointer;
    }
    </style>
</section>

<script>
function setQuickRange(days) {
    const end = new Date();
    const start = new Date();
    start.setDate(end.getDate() - days + 1);
    
    document.getElementById('start').value = start.toISOString().split('T')[0];
    document.getElementById('end').value = end.toISOString().split('T')[0];
    
    document.querySelector('form').submit();
}
</script>
{% endblock %}
